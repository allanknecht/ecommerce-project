{
  "openapi": "3.0.3",
  "info": {
    "title": "API de Catálogo",
    "description": "Serviço de catálogo de produtos para múltiplos canais",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5732",
      "description": "Servidor de desenvolvimento"
    }
  ],
  "paths": {
    "/api/v1/produtos": {
      "get": {
        "summary": "Listar produtos",
        "tags": ["Produtos"],
        "description": "Retorna uma lista paginada de produtos",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 1
            },
            "description": "Número da página"
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 10
            },
            "description": "Quantidade de itens por página"
          },
          {
            "name": "busca",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "Busca por nome ou descrição do produto",
            "required": false
          },
          {
            "name": "categoria",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "Filtro por nome da categoria",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de produtos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Produto"
                      }
                    },
                    "pagination": {
                      "type": "object",
                      "properties": {
                        "page": { "type": "integer" },
                        "limit": { "type": "integer" },
                        "total": { "type": "integer" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Criar produto",
        "description": "Cria um novo produto no catálogo",
        "tags": ["Produtos"],
        "security": [
          { "bearerAuth": [] }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProdutoCreate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Produto criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Produto"
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos"
          },
          "401": {
            "description": "Não autorizado"
          }
        }
      }
    },
    "/api/v1/produtos/{produtoId}": {
      "get": {
        "summary": "Buscar produto por ID",
        "description": "Retorna um produto específico pelo ID",
        "tags": ["Produtos"],
        "parameters": [
          {
            "name": "produtoId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "description": "ID único do produto"
          }
        ],
        "responses": {
          "200": {
            "description": "Produto encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Produto"
                }
              }
            }
          },
          "404": {
            "description": "Produto não encontrado"
          }
        }
      },
      "put": {
        "summary": "Atualizar produto",
        "description": "Atualiza um produto existente no catálogo",
        "tags": ["Produtos"],
        "security": [
          { "bearerAuth": [] }
        ],
        "parameters": [
          {
            "name": "produtoId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "description": "ID único do produto"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProdutoCreate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Produto atualizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Produto"
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos"
          },
          "401": {
            "description": "Não autorizado"
          },
          "404": {
            "description": "Produto não encontrado"
          }
        }
      },
      "delete": {
        "summary": "Excluir produto",
        "description": "Remove um produto do catálogo",
        "tags": ["Produtos"],
        "security": [
          { "bearerAuth": [] }
        ],
        "parameters": [
          {
            "name": "produtoId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "description": "ID único do produto"
          }
        ],
        "responses": {
          "204": {
            "description": "Produto excluído com sucesso"
          },
          "401": {
            "description": "Não autorizado"
          },
          "404": {
            "description": "Produto não encontrado"
          }
        }
      }
    },
    "/api/v1/auth/login": {
      "post": {
        "summary": "Login",
        "description": "Autentica usuário e retorna token JWT",
        "tags": ["Autenticação"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "admin@admin.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "admin123"
                  }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login realizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "description": "Token JWT para autenticação"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Credenciais inválidas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Health Check",
        "description": "Verifica se a API está funcionando",
        "tags": ["Health"],
        "responses": {
          "200": {
            "description": "API funcionando",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "ok"
                    },
                    "timestamp": {
                      "type": "string",
                      "format": "date-time"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Produto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "ID único do produto"
          },
          "nome": {
            "type": "string",
            "minLength": 1,
            "maxLength": 120,
            "description": "Nome do produto"
          },
          "descricao": {
            "type": "string",
            "maxLength": 2000,
            "nullable": true,
            "description": "Descrição detalhada do produto"
          },
          "preco": {
            "type": "number",
            "minimum": 0,
            "description": "Preço do produto"
          },
          "estoque": {
            "type": "integer",
            "minimum": 0,
            "default": 0,
            "description": "Quantidade em estoque"
          },
          "categoriaId": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50,
            "description": "ID da categoria"
          }
        },
        "required": ["id", "nome", "preco", "estoque", "categoriaId"]
      },
      "ProdutoCreate": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "string",
            "minLength": 1,
            "maxLength": 120
          },
          "descricao": {
            "type": "string",
            "maxLength": 2000,
            "nullable": true
          },
          "preco": {
            "type": "number",
            "minimum": 0
          },
          "estoque": {
            "type": "integer",
            "minimum": 0,
            "default": 0
          },
          "categoriaId": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          }
        },
        "required": ["nome", "preco", "categoriaId"]
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Token JWT para autenticação"
      }
    }
  }
}
